<style>
	table ,th ,td {
		border:1px solid black;
		border-collapse: collapse;

	}
	th,td {
		border-color: #96d4d4;
	}

</style>	

<h1>Students</h1>
<p> Student table</p>
<table style="width:70%">
	<tr>
		<th>First Name</th>
		<th>Last Name</th>
		<th>age</th>
	</tr>	

	
	<% @students.each do |student| %>
		<tr style="text-align: center;">    	
	    				
			<td><%=link_to student.first_name,student %></td> 
			<td><%= student.last_name %></td>
			<td><%=student.age%></td>
				
	    </tr>	
	<% end %>
	
</table>
